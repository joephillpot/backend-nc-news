{
  "GET /api": {
    "description": "serves up a json representation of all the available endpoints of the api"
  },
  "GET /api/topics": {
    "description": "serves an array of all topics",
    "queries": [],
    "exampleResponse": {
      "topics": [{ "slug": "football", "description": "Footie!" }]
    }
  },
  "GET /api/articles": {
    "description": "serves an array of all articles",
    "queries": ["author", "topic", "sort_by", "order"],
    "exampleResponse": {
      "articles": [
        {
          "title": "Seafood substitutions are increasing",
          "topic": "cooking",
          "author": "weegembump",
          "body": "Text from the article..",
          "created_at": "2018-05-30T15:59:13.341Z",
          "votes": 0,
          "comment_count": 6
        }
      ]
    }
  },
  "GET /api/articles/:article_id": {
    "description": "serves an object of the requested article by article_id",
    "queries": [],
    "exampleResponse": {
      "article": {
        "article_id": 1,
        "title": "some sort of title here",
        "topic": "a topic name",
        "author": "authors username",
        "body": "main body of text",
        "created_at": "2020-10-16T05:03:00.000Z",
        "votes": 1,
        "article_img_url": "https://link-to-artilcle-img"
      }
    }
  },
  "GET /api/articles/:article_id/comments": {
    "description": "gets all comments from an article",
    "queries": [],
    "exampleResponse": {
      "comments": [{
        "comment_id": 1,
        "body": "main body of comment",
        "article_id": 1,
        "author": "authors username",
        "votes": 0,
        "created_at": "2020-01-01T03:08:00.000Z"
      }]
    }
  },
  "POST /api/articles/:article_id/comments": {
    "description": "posts a new comment to an article",
    "queries": [],
    "exampleRequest": {
      "author": "insert-username",
      "body": "some sort of comment"
    },
    "exampleResponse": {
      "comment": {
        "author": "insert-username",
        "body": "some sort of comment"
      }
    }
  },
  "PATCH /api/articles/:article_id": {
    "description": "updates votes on the given article",
    "queries": [],
    "exampleRequest": {
      "inc_votes": 1
    },
    "exampleResponse": {
      "article": {
        "author": "authors username",
        "title": "some sort of title here",
        "article_id": 1,
        "body": "main body of text",
        "topic": "a topic name",
        "created_at":"2017-03-11 12:21:54.171+00",
        "votes": 2,
        "comment_count": 389
      }
    }
  },
  "DELETE /api/comments/:comment_id": {
    "description": "deletes the given comment",
    "queries": [],
    "exampleResponse": "Status 204"
  }
}
